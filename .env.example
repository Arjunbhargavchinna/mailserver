# Application
APP_NAME="MailFlow Enterprise"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=your-32-character-secret-key-here
APP_TIMEZONE=UTC

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=mailflow
DB_USERNAME=root
DB_PASSWORD=

# Read replica (optional)
DB_READ_HOST=localhost
DB_READ_PORT=3306
DB_READ_USERNAME=root
DB_READ_PASSWORD=

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=mailflow

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=0

# Queue
QUEUE_CONNECTION=redis
QUEUE_WORKERS=3
EMAIL_QUEUE_WORKERS=5

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Mail Features
MAIL_ENCRYPTION_ENABLED=true
MAIL_ENCRYPTION_KEY=your-mail-encryption-key
MAIL_TRACKING_ENABLED=true
MAIL_TEMPLATES_ENABLED=true
MAIL_RATE_LIMITING_ENABLED=true
MAIL_RATE_LIMIT_PER_MINUTE=60
MAIL_RATE_LIMIT_PER_HOUR=1000
MAIL_RATE_LIMIT_PER_DAY=10000

# Search
SEARCH_DRIVER=elasticsearch
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_SSL_VERIFICATION=true

# Storage
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-bucket-name
AWS_URL=

# Backup
BACKUP_ENABLED=true
BACKUP_DISK=s3
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_ENCRYPT=true

# Security
JWT_SECRET=your-jwt-secret-key
JWT_TTL=3600
JWT_REFRESH_TTL=86400

# Two Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="${APP_NAME}"

# Rate Limiting
LOGIN_MAX_ATTEMPTS=5
LOGIN_DECAY_MINUTES=15
LOGIN_LOCKOUT_DURATION=900
API_RATE_LIMIT=1000
API_RATE_DECAY=60

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_HISTORY_LIMIT=5
PASSWORD_EXPIRY_DAYS=90

# Session
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# CSRF
CSRF_ENABLED=true
CSRF_TOKEN_LIFETIME=3600

# Audit
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555
AUDIT_ANONYMIZE_DAYS=365

# IP Whitelist
IP_WHITELIST_ENABLED=false
IP_WHITELIST_ADMIN_ONLY=true
IP_WHITELIST=

# Geo Blocking
GEO_BLOCKING_ENABLED=false
GEO_BLOCKED_COUNTRIES=
GEO_ALLOWED_COUNTRIES=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_SLACK_WEBHOOK_URL=
LOG_SLACK_LEVEL=critical

# Notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#general
SLACK_USERNAME=MailFlow
SLACK_ICON=:mailbox:

# SMS (Twilio)
SMS_PROVIDER=twilio
SMS_FROM=
TWILIO_SID=
TWILIO_TOKEN=

# Push Notifications (FCM)
PUSH_PROVIDER=fcm
FCM_SERVER_KEY=

# Webhook
WEBHOOK_DEFAULT_URL=
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# CORS
FRONTEND_URL=https://your-frontend-domain.com

# Features
FEATURE_2FA=true
FEATURE_EMAIL_ENCRYPTION=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_EMAIL_TEMPLATES=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_ANALYTICS=true
FEATURE_API_ACCESS=true

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=