{
    "name": "mailflow/enterprise",
    "description": "Enterprise Email Management System",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.8",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.4",
        "league/oauth2-server": "^8.5",
        "doctrine/dbal": "^3.6",
        "symfony/console": "^6.3",
        "guzzlehttp/guzzle": "^7.8",
        "predis/predis": "^2.2",
        "league/flysystem": "^3.15",
        "league/flysystem-aws-s3-v3": "^3.15",
        "intervention/image": "^2.7",
        "endroid/qr-code": "^4.8",
        "pragmarx/google2fa": "^8.0",
        "spatie/async": "^1.5",
        "elasticsearch/elasticsearch": "^8.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "MailFlow\\": "src/",
            "MailFlow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src",
        "cs-check": "phpcs src",
        "cs-fix": "phpcbf src"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}